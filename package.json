{
  "name": "@kernel.salacoste/n8n-workflow-builder",
  "version": "0.8.0",
  "description": "MCP (Model Context Protocol) server for managing n8n workflows through Claude AI and Cursor IDE with automated deployment to n8n.informedcrew.com",
  "scripts": {
    "clean": "rm -rf build",
    "build": "tsc",
    "dev": "tsc -w",
    "start": "node build/index.js",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "deploy:workflow": "node scripts/deploy-workflow.js",
    "deploy:workflow:dry-run": "NODE_ENV=test node scripts/deploy-workflow.js",
    "version:check": "semantic-release --dry-run --no-ci",
    "workflow:test": "npm run build && npm run deploy:workflow:dry-run"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "semantic-release": "^24.2.7",
    "typescript": "^5.0.0"
  },

  "bin": {
    "n8n-workflow-builder": "build/index.js"
  },
      "keywords": [
    "n8n",
    "workflow",
    "automation",
    "mcp",
    "claude",
    "cursor",
    "ai",
    "model-context-protocol",
    "deployment",
    "semantic-release",
    "github-actions"
  ],
  "author": "IMD",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salacoste/mcp-n8n-workflow-builder.git"
  },
  "bugs": {
    "url": "https://github.com/salacoste/mcp-n8n-workflow-builder/issues"
  },
  "homepage": "https://github.com/salacoste/mcp-n8n-workflow-builder",
  "engines": {
    "node": ">=14.0.0"
  },
  "workflowDeployment": {
    "target": "n8n.informedcrew.com",
    "versioning": "semantic-release",
    "automation": "github-actions"
  }
}
